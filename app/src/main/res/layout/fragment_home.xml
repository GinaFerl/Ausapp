<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragmentKt">

    <RelativeLayout
        android:id="@+id/relative_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="top|center_horizontal|center" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="160dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="160dp"
            android:src="@drawable/logo_ausapp" />

        <ImageView
            android:id="@+id/alphabet"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/logo"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="560dp"
            android:src="@drawable/alphabet1" />

        <ImageView
            android:id="@+id/numbers"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/logo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="560dp"
            android:src="@drawable/numbers1" />

        <ImageView
            android:id="@+id/animals"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/logo"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="160dp"
            android:layout_marginBottom="410dp"
            android:src="@drawable/animals" />

        <ImageView
            android:id="@+id/plants"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/logo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="410dp"
            android:src="@drawable/plants1" />

        <ImageView
            android:id="@+id/animals_voices"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/logo"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="320dp"
            android:layout_marginBottom="256dp"
            android:src="@drawable/animals_voice" />

        <ImageView
            android:id="@+id/human_voice"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/logo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="320dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="256dp"
            android:src="@drawable/human_voice" />

        <ImageView
            android:id="@+id/spelling_reading"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/logo"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="470dp"
            android:layout_marginBottom="105dp"
            android:src="@drawable/spelling_reading" />

        <ImageView
            android:id="@+id/puzzle"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/logo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="470dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="105dp"
            android:src="@drawable/puzzle1" />
    </RelativeLayout>
</FrameLayout>