<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragmentKt">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/logo_ausapp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgAlphabet"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/rectangle5"
                android:padding="10dp"
                android:src="@drawable/alphabet"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imgNumber"
                app:layout_constraintTop_toBottomOf="@+id/imgLogo" />


            <ImageView
                android:id="@+id/imgNumber"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/rectangle5"
                android:padding="10dp"
                android:src="@drawable/numbers"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgAlphabet"
                app:layout_constraintTop_toBottomOf="@+id/imgLogo" />

            <ImageView
                android:id="@+id/imgAnimals"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle5"
                android:padding="10dp"
                android:src="@drawable/animal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imgPlants"
                app:layout_constraintTop_toBottomOf="@+id/imgAlphabet" />


            <ImageView
                android:id="@+id/imgPlants"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle5"
                android:padding="10dp"
                android:src="@drawable/plants"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgAnimals"
                app:layout_constraintTop_toBottomOf="@+id/imgNumber" />

            <ImageView
                android:id="@+id/imgAnimalvoice"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle5"
                android:padding="10dp"
                android:src="@drawable/animal_voice"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imgHumanvoice"
                app:layout_constraintTop_toBottomOf="@+id/imgAnimals" />


            <ImageView
                android:id="@+id/imgHumanvoice"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle5"
                android:padding="10dp"
                android:src="@drawable/humanvoice"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgAnimalvoice"
                app:layout_constraintTop_toBottomOf="@+id/imgPlants" />

            <ImageView
                android:id="@+id/imgSpellread"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rectangle5"
                android:padding="10dp"
                android:src="@drawable/reading"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imgPuzzle"
                app:layout_constraintTop_toBottomOf="@+id/imgAnimalvoice" />


            <ImageView
                android:id="@+id/imgPuzzle"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rectangle5"
                android:padding="10dp"
                android:src="@drawable/puzzle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgSpellread"
                app:layout_constraintTop_toBottomOf="@+id/imgHumanvoice" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>