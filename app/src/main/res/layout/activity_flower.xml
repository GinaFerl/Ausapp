<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlowerActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_flower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="BUNGA"
                android:textColor="#290D0D"
                android:textSize="30sp"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgHibiscus"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/hibiscus"
                android:background="@drawable/rectangle4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgJasmine"
                app:layout_constraintTop_toBottomOf="@+id/text_flower" />

            <ImageView
                android:id="@+id/imgJasmine"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/rectangle4"
                android:src="@drawable/jasmine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgHibiscus"
                app:layout_constraintTop_toBottomOf="@+id/text_flower" />

            <ImageView
                android:id="@+id/imgLily"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:background="@drawable/rectangle4"
                android:src="@drawable/lily"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgLotus"
                app:layout_constraintTop_toBottomOf="@+id/imgHibiscus" />

            <ImageView
                android:id="@+id/imgLotus"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle4"
                android:src="@drawable/lotus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgLily"
                app:layout_constraintTop_toBottomOf="@+id/imgJasmine" />

            <ImageView
                android:id="@+id/imgMarigold"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/marigold"
                android:background="@drawable/rectangle4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgMum"
                app:layout_constraintTop_toBottomOf="@+id/imgLily" />

            <ImageView
                android:id="@+id/imgMum"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle4"
                android:padding="5dp"
                android:src="@drawable/mum"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgMarigold"
                app:layout_constraintTop_toBottomOf="@+id/imgLotus" />

            <ImageView
                android:id="@+id/imgOrchid"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/orchid"
                android:background="@drawable/rectangle4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgRaflesia"
                app:layout_constraintTop_toBottomOf="@+id/imgMarigold" />

            <ImageView
                android:id="@+id/imgRaflesia"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle4"
                android:src="@drawable/raflesia"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgOrchid"
                app:layout_constraintTop_toBottomOf="@+id/imgMum" />

            <ImageView
                android:id="@+id/imgRose"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/rose"
                android:background="@drawable/rectangle4"
                android:layout_marginBottom="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgSunflower"
                app:layout_constraintTop_toBottomOf="@+id/imgOrchid" />

            <ImageView
                android:id="@+id/imgSunflower"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/sunflower"
                android:background="@drawable/rectangle4"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgRose"
                app:layout_constraintTop_toBottomOf="@+id/imgRaflesia" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>